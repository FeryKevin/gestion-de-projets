<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ajouter un client{% endblock %}</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="{{asset('css/style.css')}}">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="{{asset('js/script.js')}}"></script>
        {% endblock %}
    </head>
    <body>

        {% block body %}
        
            {% include 'includes/navbar.html.twig' %}

            <section id="insert">

                <div class="container-fluid">
                    <div class="row">

                        <!-- menu -->
                        <div class="col-lg-3 col-md-3 col-sm-6">
                            {% include 'includes/menu.html.twig' %}
                        </div>

                        <!-- page -->
                        <div class="col-lg-9 col-md-9 col-sm-12">

                            <!-- lien -->
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <h2 class="nouv">Nouveau client</h2>
                                <ul class="listContact">
                                    <a href="{{ path('customerAdd') }}" class="infoGenerale">INFORMATIONS GÉNÉRALES</a>&emsp;
                                    <a href="{{ path('contactAdd') }}" class="contactLien2">CONTACTS CLIENT</a>
                                </ul>
                            </div>

                            <!-- debut carré -->
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="add">

                                    <!-- début form -->
                                    {# <form method='Post'>

                                        <label class="lab">Nom <span style="color:red">*</span></label>
                                        <input name='name' class="input0" value="">
                                        <p class="error"></p>

                                        <label class="lab">Code interne</label>
                                        <button disabled="disabled" class="input1">Champs généré automatiquement</button>

                                        <label class="lab2">Notes / remarques</label>
                                        <textarea name='notes' class="textarea"></textarea>

                                        <!-- bouton form -->
                                        <div class="col-lg-12 col-md-12 col-sm-12">
                                            <div class="btnPlace">
                                                <a href="{{ path('customer') }}" class="btnBlanc">ANNULER</a>&emsp;
                                                <button type='submit' name='submit' class="btnOrange"><span class="glyphicon glyphicon-ok"></span> SAUVEGARDER</button>
                                            </div>
                                        </div>

                                    </form> #}
                                    {{ form_start(form) }}
                                    <div>
                                        {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'lab'}}) }}
                                        {{ form_widget(form.name, {'attr': {'class': 'input0'}}) }}
                                        <br>
                                        {{ form_label(form.code, 'Code interne', {'label_attr': {'class': 'lab'}}) }}
                                        {{ form_widget(form.code, {'attr': {'class': 'input1'}}) }}
                                        <br>
                                        {{ form_label(form.notes, 'Notes / remarques', {'label_attr': {'class': 'lab2'}}) }}
                                        {{ form_widget(form.notes, {'attr': {'class': 'textarea'}}) }}
                                        <div class="btnPlace">
                                            <a href="{{ path('customer') }}" class="btnBlanc">ANNULER</a>&emsp;
                                            {{ form_row(form.submit, { 'label': 'SAUVEGARDER', 'attr': {'class': 'btnOrange'}}) }}
                                            {# <span class="glyphicon glyphicon-ok"></span> SAUVEGARDER</button> #}
                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            
            {% include 'includes/footer.html.twig' %}

        {% endblock %}

    </body>
</html>